@layout RootLayout
@inherits Microsoft.AspNetCore.Components.LayoutComponentBase

<Layout>
    <LayoutHeader Fixed="true">
        <Bar Background="Background.Light"
             ThemeContrast="ThemeContrast.Light"
             Style="height: 64px;">
            <BarBrand>
                <BarItem>
                    <BarLink To="https://www.z-bitco.com">
                        <img src="https://z-bitco.com/wp-content/uploads/2018/09/logo.png" alt="Z-bit" height="40"/>
                    </BarLink>
                </BarItem>
            </BarBrand>
        </Bar>
    </LayoutHeader>
    <LayoutContent Padding="Padding.Is4.OnX">
        @Body
    </LayoutContent>
</Layout>