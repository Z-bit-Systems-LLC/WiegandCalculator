@layout RootLayout
@inherits Microsoft.AspNetCore.Components.LayoutComponentBase

<Layout>
    <LayoutHeader Fixed="true">
        <Bar Background="Background.Light"
             ThemeContrast="ThemeContrast.Light"
             Style="height: 64px;">
            <BarBrand>
                <BarItem>
                    <BarLink To="https://www.z-bitco.com" Style="padding: 0">
                        <Figure Size="FigureSize.Is64x64" >
                            <FigureImage Source="https://z-bitco.com/wp-content/uploads/2018/09/logo.png" AlternateText="Z-bit" />
                        </Figure>
                    </BarLink>
                </BarItem>
            </BarBrand>
        </Bar>
    </LayoutHeader>
    <LayoutContent Padding="Padding.Is4.OnX">
        @Body
    </LayoutContent>
</Layout>